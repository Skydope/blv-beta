---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Vision from '../components/Vision.astro';
import Modules from '../components/Modules.astro';
import KPIs from '../components/KPIs.astro';
import TechStack from '../components/TechStack.astro';
import Roadmap from '../components/Roadmap.astro';
import FullProject from '../components/FullProject.astro';
import '../styles/global.css';
---

<Layout>
	<Navbar />
	<main>
		<Hero />
		<Vision />
		<Modules />
		<KPIs />
		<TechStack />
		<Roadmap />
		<FullProject />

		<footer class="bg-gray-950 border-t border-white/10 py-12">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid md:grid-cols-3 gap-8 mb-8">
					<div>
						<h3 class="text-xl font-bold gradient-text mb-4">Bolívar Digital 2030</h3>
						<p class="text-gray-400 text-sm">
							Transformando San Carlos de Bolívar en una ciudad inteligente del siglo XXI
						</p>
					</div>

					<div>
						<h4 class="font-semibold text-white mb-4">Enlaces Rápidos</h4>
						<ul class="space-y-2 text-sm">
							<li><a href="#vision" class="text-gray-400 hover:text-tech-cyan transition-colors">Visión</a></li>
							<li><a href="#modules" class="text-gray-400 hover:text-tech-cyan transition-colors">Módulos</a></li>
							<li><a href="#kpis" class="text-gray-400 hover:text-tech-cyan transition-colors">KPIs</a></li>
							<li><a href="#roadmap" class="text-gray-400 hover:text-tech-cyan transition-colors">Roadmap</a></li>
						</ul>
					</div>

					<div>
						<h4 class="font-semibold text-white mb-4">Equipo</h4>
						<ul class="space-y-2 text-sm text-gray-400">
							<li>Augusto Marcos Natiello - Líder de Desarrollo</li>
							<li>Matías Asín - Líder de Data Science</li>
						</ul>
					</div>
				</div>

				<div class="border-t border-white/10 pt-8 text-center text-gray-400 text-sm">
					<p>© 2024 Bolívar Digital 2030. Agenda 2030 - ODS 11: Ciudades y Comunidades Sostenibles</p>
				</div>
			</div>
		</footer>
	</main>
</Layout>
